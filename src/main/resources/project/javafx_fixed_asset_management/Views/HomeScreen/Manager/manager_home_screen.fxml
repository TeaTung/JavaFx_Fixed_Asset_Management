<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.javafx_fixed_asset_management.Controllers.ManagerHomeScreenController">
    <children>
        <ImageView fitHeight="720.0" fitWidth="1280.0"
                   onMouseDragged="#panelMouseDraggedOnAction"
                   onMousePressed="#panelMousePressOnAction"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@background.png"/>
            </image>
        </ImageView>
        <Button id="btnAccount" layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
                onMouseClicked="#openAccountScreenButtonAction" prefHeight="56.0" prefWidth="56.0"
                style="-fx-border-radius: 100px;" styleClass="btn" stylesheets="@style.css"/>
        <Button id="btnTransfer" fx:id="btnTransfer" layoutX="846.0" layoutY="401.0" mnemonicParsing="false"
                onMouseClicked="#openTransferScreenButtonAction" prefHeight="250.0" prefWidth="250.0"
                style="-fx-border-radius: 25px;" styleClass="btn" stylesheets="@style.css"/>
        <Button id="btnDevice" fx:id="btnDevice" layoutX="185.0" layoutY="108.0" mnemonicParsing="false"
                onMouseClicked="#openDeviceScreenButtonAction" prefHeight="250.0" prefWidth="250.0"
                style="-fx-border-radius: 25px;" styleClass="btn" stylesheets="@style.css"/>
        <Button id="btnInventory" fx:id="btnLiquidation" layoutX="517.0" layoutY="108.0" mnemonicParsing="false"
                onMouseClicked="#openInventoryScreenButtonAction" prefHeight="250.0" prefWidth="250.0"
                style="-fx-border-radius: 25px;" styleClass="btn" stylesheets="@style.css"/>
        <Button id="btnHistory" fx:id="btnHistory" layoutX="185.0" layoutY="401.0" mnemonicParsing="false"
                onMouseClicked="#openHistoryAndManagementScreenButtonAction" prefHeight="250.0" prefWidth="250.0"
                style="-fx-border-radius: 25px;" styleClass="btn" stylesheets="@style.css"/>
        <Button id="btnLiquidation" fx:id="btnInventory" layoutX="846.0" layoutY="108.0" mnemonicParsing="false"
                onMouseClicked="#openLiquidationScreenButtonAction" prefHeight="250.0" prefWidth="250.0"
                style="-fx-border-radius: 25px;" styleClass="btn" stylesheets="@style.css"/>
        <Button id="btnRepair" fx:id="btnRepair" layoutX="515.0" layoutY="401.0" mnemonicParsing="false"
                onMouseClicked="#openRepairScreenButtonAction" prefHeight="250.0" prefWidth="250.0"
                style="-fx-border-radius: 25px;" styleClass="btn" stylesheets="@style.css"/>
        <Button id="btnLogout" fx:id="logoutBtn" layoutX="14.0" layoutY="108.0" mnemonicParsing="false"
                onMouseClicked="#logoutBtnHandler" prefHeight="56.0" prefWidth="56.0" style="-fx-border-radius: 100px;"
                styleClass="btn" stylesheets="@style.css"/>
    </children>
</AnchorPane>
